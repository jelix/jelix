{
    "name": "jelix/jelix",
    "type": "library",
    "description": "Jelix PHP framework",
    "keywords": ["framework"],
    "homepage": "http://jelix.org",
    "license": "LGPL-2.1-or-later",
    "authors": [
        {
            "name": "Laurent Jouanneau",
            "email": "laurent@jelix.org"
        },
        {
            "name": "Jelix Community",
            "homepage": "https://github.com/jelix/jelix/graphs/contributors"
        }
    ],
    "require": {
        "php": ">=8.1.0",
        "jelix/fakeserverconf": "^1.0.0",
        "jelix/composer-module-setup": "^1.1.0",
        "phpmailer/phpmailer": "^6.9.3",
        "jelix/castor": "^1.1.4",
        "jelix/inifile": "^3.4.0",
        "jelix/simplelocalization": "^1.7.2",
        "jelix/properties-file": "^1.2.3",
        "symfony/console":"^6.4.15",
        "jelix/file-utilities": "^1.8.5",
        "jelix/version": "^2.0.1",
        "defuse/php-encryption": "^2.4.0",
        "google/recaptcha": "~1.3.0",
        "psr/event-dispatcher": "~1.0.0"
    },
    "archive": {
        "exclude": [ "/build", "/temp", "/testapp", "Makefile"]
    },
    "autoload": {
        "psr-0": {
            "jelix\\": "lib/"
        },
        "psr-4": {
            "Jelix\\DevHelper\\": "lib/JelixFramework/DevHelper/",
            "Jelix\\Event\\" : "lib/JelixFramework/Event/",
            "Jelix\\Routing\\UrlMapping\\": "lib/JelixFramework/Routing/UrlMapping/",
            "Jelix\\Installer\\": "lib/jelix/installer/Installer/",
            "Jelix\\Scripts\\": "lib/JelixFramework/Scripts/",
            "Jelix\\Core\\Infos\\": "lib/jelix/core/Infos/",
            "Jelix\\Dependencies\\" : "lib/JelixFramework/Dependencies",
            "Jelix\\WebAssets\\" : "lib/JelixFramework/WebAssets",
            "Jelix\\UnitTests\\" : "lib/jelix-tests/UnitTests"
        },
        "classmap": [ ],
        "files": [ "lib/jelix/init.php" ]
    },
    "bin": ["bin/create-jelix-app"],
    "minimum-stability": "stable",
    "extra" : {
        "branch-alias": {
            "dev-master": "2.0-dev",
            "dev-jelix-1.7.x": "1.7-dev",
            "dev-jelix-1.8.x": "1.8-dev",
            "dev-jelix-1.9.x": "1.9-dev"
        },
        "jelix": {
            "modules-dir" : [
                "lib/jelix-modules",
                "lib/jelix-admin-modules"
            ],
            "plugins-dir" : [
                "lib/jelix-plugins"
            ]
        }
    }
}
